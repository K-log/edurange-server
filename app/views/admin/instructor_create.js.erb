<% if @user.errors.any? %>
    <% if @user.errors[:email].any? %>
        $('#modal-create-instructor').find('#email-div').addClass('has-error');
        $('#modal-create-instructor').find('#email-help').text('<%= @user.errors[:email][0] %>');
    <% end %>
    <% if @user.errors[:name].any? %>
        $('#modal-create-instructor').find('#name-div').addClass('has-error');
        $('#modal-create-instructor').find('#name-help').text('<%= @user.errors[:name][0] %>');
    <% end %>
    <% if @user.errors[:organization].any? %>
        $('#modal-create-instructor').find('#organization-div').addClass('has-error');
        $('#modal-create-instructor').find('#organization-help').text('<%= @user.errors[:organization][0] %>');
    <% end %>
<% else %>
    $('#instructors-table').append("<tr id='instructor-<%= @user.id %>'><td><%= @user.name %></td><td><%= @user.email %></td><td><%= @user.organization %></td><td><a href='/admin/instructor_delete?id=<%= @user.id %>' data-method='post' rel='nofollow' data-remote='true'>delete</a></td></tr>"); 
    $('#modal-create-instructor').modal('toggle');
<% end %>
%tr{ id: "student-group-user-#{sgu.id}" }
  %td= check_box_tag "user_id[]", sgu.user.id
  %td= sgu.user.name
  %td= sgu.user.email
  %td= sgu.user.organization
  - if student_group.name == "All"
    %td
      = link_to 'add to student group', '#modal-student-group-user-add', data: {toggle: "modal"},      |
          onclick: "$('#modal-student-group-user-add').find('#user-name').html('#{sgu.user.name}');" + |
                   "$('#modal-student-group-user-add').find('#user_id').val('#{sgu.user.id}');" +      |
                   "$('#modal-student-group-user-add').find('#name-div').removeClass('has-error');" +  |
                   "$('#modal-student-group-user-add').find('#student_group_name').val('');" +         |
                   "$('#modal-student-group-user-add').find('#name-help').html('');"                   |
  - else
    %td
      = link_to 'remove', instructor_student_group_user_remove_path(student_group_user_id: sgu.id), remote: :true,
          method: :post, data: { confirm: "Are you sure you want to delete Student Group User #{sgu.user.name}?" }

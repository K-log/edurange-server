$('#modal-student-group-user-add').modal('hide');

<% if @student_group.nil? %>
    alert("That group doesn't exist!");
<% else %>
    <% @student_group_users.each do |sgu| %>
        if ($('#student-group-<%= @student_group.id %>-table .user-<%= sgu.user.id %>').length == 0) {
            $('#student-group-<%= @student_group.id %>-table #foot').before(
                '<%=j render("/instructor/student",
                             student_group: @student_group,
                             student: sgu)
                %>');
        }
    <% end %>
    $('#student-group-<%= @student_group.id %> .collapse').collapse('show');
    $(':checkbox').prop('checked', false);
<% end %>

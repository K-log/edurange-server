%div.panel.panel-default

  %div.panel-heading.nav.nav-pills
    %li
      %h4
        Scenarios
    %li
      = link_to 'New Scenario', new_scenario_path, class: 'btn'
    / %li.dropdown
    /   %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#", role: "button", "aria-expanded" => "false"}
    /     Actions
    /     %span.caret
    /   %ul.dropdown-menu{role: "menu"}
    /     %li
    /        = link_to 'create scenario'
    /        = link_to 'upload scenario'

  %div.panel-body
    %dl
    %table.table.table-bordered
      %tr
        %th Name
        %th Status
        - if @user.is_admin?
          %th Instructor
        %th

      - @scenarios.each do |scenario|
        %tr
          %td= scenario.name
          %td= scenario.status
          - if @user.is_admin?
            %td= User.find(scenario.user_id).name
          %td
            %div.btn-group
              = link_to 'Show', scenario, class: 'btn btn-default'
              = link_to 'Destroy', scenario, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
%div.panel.panel-default
  %div.panel-heading
    %b
      Scenarios
  %div.panel-body
    %dl
    %table.table.table-bordered
      %tr
        %th Name
        %th Status
        %th
    
      - @scenarios.each do |scenario|
        %tr
          %td= scenario.name
          %td= scenario.status
          %td
            %div.btn-group
              = link_to 'Show', scenario, class: 'btn btn-default'
              = link_to 'Scoring', scenario.scoring_pages, class: 'btn btn-default'
              = link_to 'Edit', edit_scenario_path(scenario), class: 'btn btn-default'
              = link_to 'Destroy', scenario, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
    
    %br
    
    = link_to 'New Scenario', new_scenario_path, class: 'btn btn-primary'

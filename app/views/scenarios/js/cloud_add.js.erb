<% if @cloud.errors.any? %>
	<% if @cloud.errors[:name].any? %>
		$('#modal-add-cloud').find('#name-div').addClass('has-error');
    	$('#modal-add-cloud').find('#name-help').text('<%= @cloud.errors[:name][0] %>');
	<% else %>
		$('#modal-add-cloud').find('#name-div').removeClass('has-error');
    	$('#modal-add-cloud').find('#name-help').text('');
	<% end %>
	<% if @cloud.errors[:cidr_block].any? %>
		$('#modal-add-cloud').find('#cidr-div').addClass('has-error');
    	$('#modal-add-cloud').find('#cidr-help').text('<%= @cloud.errors[:cidr_block][0] %>');
	<% else %>
		$('#modal-add-cloud').find('#cidr-div').removeClass('has-error');
    	$('#modal-add-cloud').find('#cidr-help').text('');
	<% end %>
<% else %>
	$('#clouds-ul').append("<%= escape_javascript( render('/scenarios/show/clouds', cloud: @cloud).delete("\n") ).html_safe %>"); 
	$('#modal-add-cloud').modal('toggle');
<% end %>
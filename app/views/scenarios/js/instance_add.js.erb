<% if @instance.errors.any? %>
	<% if @instance.errors[:name].any? %>
		$('#modal-add-instance').find('#name-div').addClass('has-error');
    $('#modal-add-instance').find('#name-help').text('<%= @instance.errors[:name][0] %>');
	<% else %>
		$('#modal-add-instance').find('#name-div').removeClass('has-error');
    $('#modal-add-instance').find('#name-help').text('');
	<% end %>
	<% if @instance.errors[:ip_address].any? %>
		$('#modal-add-instance').find('#ip-div').addClass('has-error');
    $('#modal-add-instance').find('#ip-help').text('<%= @instance.errors[:ip_address][0] %>');
	<% else %>
		$('#modal-add-instance').find('#ip-div').removeClass('has-error');
    $('#modal-add-instance').find('#ip-help').text('');
	<% end %>
	<% if @instance.errors[:internet_accessible].any? %>
		$('#modal-add-instance').find('#internet-accessible-div').addClass('has-error');
    $('#modal-add-instance').find('#internet-accessible-help').text('<%= @instance.errors[:internet_accessible][0] %>');
	<% else %>
		$('#modal-add-instance').find('#internet-accessible-div').removeClass('has-error');
    $('#modal-add-instance').find('#internet-accessible-help').text('');
	<% end %>
	<% if @instance.errors[:os].any? %>
		$('#modal-add-instance').find('#os-div').addClass('has-error');
    $('#modal-add-instance').find('#os-help').text('<%= @instance.errors[:os][0] %>');
	<% else %>
		$('#modal-add-instance').find('#os-div').removeClass('has-error');
    $('#modal-add-instance').find('#os-help').text('');
	<% end %>
<% else %>
  $('#instances-ul-<%= @instance.subnet.id.to_s %>').append("<%= escape_javascript( render('/scenarios/show/instance', instance: @instance).delete("\n") ).html_safe %>");
	$('#modal-add-instance').modal('toggle');
<% end %>
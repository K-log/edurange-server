<% if @instance.errors.any? %>
  <% if @instance.errors[:name].any? %>
    $('#modal-modify-instance').find('#name-div').addClass('has-error');
    $('#modal-modify-instance').find('#name-help').text('<%= @instance.errors[:name][0] %>');
  <% else %>
    $('#modal-modify-instance').find('#name-div').removeClass('has-error');
    $('#modal-modify-instance').find('#name-help').text('');
  <% end %>
  <% if @instance.errors[:ip_address].any? %>
    $('#modal-modify-instance').find('#ip-div').addClass('has-error');
    $('#modal-modify-instance').find('#ip-help').text('<%= @instance.errors[:ip_address][0] %>');
  <% else %>
    $('#modal-modify-instance').find('#ip-div').removeClass('has-error');
    $('#modal-modify-instance').find('#ip-help').text('');
  <% end %>
  <% if @instance.errors[:internet_accessible].any? %>
    $('#modal-modify-instance').find('#internet-accessible-div').addClass('has-error');
    $('#modal-modify-instance').find('#internet-accessible-help').text('<%= @instance.errors[:internet_accessible][0] %>');
  <% else %>
    $('#modal-modify-instance').find('#internet-accessible-div').removeClass('has-error');
    $('#modal-modify-instance').find('#internet-accessible-help').text('');
  <% end %>
  <% if @instance.errors[:os].any? %>
    $('#modal-modify-instance').find('#os-div').addClass('has-error');
    $('#modal-modify-instance').find('#os-help').text('<%= @instance.errors[:os][0] %>');
  <% else %>
    $('#modal-modify-instance').find('#os-div').removeClass('has-error');
    $('#modal-modify-instance').find('#os-help').text('');
  <% end %>
<% else %>

  <% if @accessible_to_not_accessible %>
    $('#instance-public-ip-div-<%= @instance.id %>').remove();
  <% elsif @not_accessible_to_accessible %>
    $('#accessible-options-<%= @instance.id %>').append("<div id='instance-public-ip-div-<%= @instance.id %>'><li>Public IP: <span id='instance-public-ip-<%= @instance.id %>'><%= @instance.provider_instance_public_ip ? @instance.provider_instance_public_ip : 'not set' %></span><li>SSH Ready: <span id='instance-ssh-ready-<%= @instance.id %>'><%= @instance.ssh_ready? %></span></li></div>")
  <% end %>

  $('#instance-name-<%= @instance.id %>').text('<%= @instance.name %>');
  $('#instance-ip-address-<%= @instance.id %>').text('<%= @instance.ip_address %>');
  $('#instance-internet-accessible-<%= @instance.id %>').text('<%= @instance.internet_accessible %>');
  $('#instance-os-<%= @instance.id %>').text('<%= @instance.os %>');
  $('#modal-modify-instance').modal('toggle');
<% end %>
<% if @error %>
	alert("<%= @error %>")
<% else %>
	$('#modal-update-recipe').modal('show');
	$('#modal-update-recipe').find('#title').html('Recipe: <%= @recipe %>');
	$('#modal-update-recipe').find('#text').val("<%= @recipe_text %>");
	$('#modal-update-recipe').find('#recipe').val("<%= @recipe %>");
	$('#modal-update-recipe').find('#text').height( 0 );
	$('#modal-update-recipe').find('#text').height( $('#modal-update-recipe').find('#text')[0].scrollHeight );
<% end %>
<% if @scenario.errors.any? %>
	<% if @scenario.errors[:name].any? %>
		$('#modal-modify-scenario').find('#name-div').addClass('has-error');
    	$('#modal-modify-scenario').find('#name-help').text('<%= @scenario.errors[:name][0] %>');
	<% end %>
	<% if @scenario.errors[:running].any? %>
		$('#modal-modify-scenario').find('#help-div').addClass('has-error');
    	$('#modal-modify-scenario').find('#help-help').text('<%= @scenario.errors[:running][0] %>');
	<% end %>
<% else %>
	$('#modal-modify-scenario').modal('toggle');
	$('#scenario-main-title').text("<%= @scenario.name %>");
	$('#scenario-name').text("<%= @scenario.name %>");
<% end %>
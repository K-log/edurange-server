<% if @question.errors.any? %>
	alert('There was an error deleting question');
<% else %>
	$('#question-<%= @question.id %>').remove();

	// update student answered and correct
  $('.student-answers-out-of').each(function(i, obj) {
    $(obj).text('<%= @question.scenario.questions.size %>');
  });
  $('.student-questions').each(function(i, obj) {
    $(obj).remove();
    get_student_answers(<%= @question.scenario.id %>, $(obj).attr('student_id'));
  });
  
<% end %>
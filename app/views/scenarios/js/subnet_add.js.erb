<% if @subnet.errors.any? %>
    <% if @subnet.errors[:name].any? %>
        $('#modal-add-subnet').find('#name-div').addClass('has-error');
        $('#modal-add-subnet').find('#name-help').text('<%= @subnet.errors[:name][0] %>');
    <% else %>
        $('#modal-add-subnet').find('#name-div').removeClass('has-error');
        $('#modal-add-subnet').find('#name-help').text('');
    <% end %>
    <% if @subnet.errors[:cidr_block].any? %>
        $('#modal-add-subnet').find('#cidr-div').addClass('has-error');
        $('#modal-add-subnet').find('#cidr-help').text('<%= @subnet.errors[:cidr_block][0] %>');
    <% else %>
        $('#modal-add-subnet').find('#cidr-div').removeClass('has-error');
        $('#modal-add-subnet').find('#cidr-help').text('');
    <% end %>
<% else %>
    $('#subnets-ul-<%= @subnet.cloud.id %>').append("<%= escape_javascript( render('/scenarios/show/subnet', subnet: @subnet).delete("\n") ).html_safe %>");
    $('#modal-add-subnet').modal('toggle');
<% end %>
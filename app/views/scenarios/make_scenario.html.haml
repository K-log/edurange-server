%div.modal#modal-create-scenario{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{ :type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"}
          &times;
        %h3.modal-title.inline#title
          %span#modal-title
          Title

      %div.modal-body#modalbody
      %div.modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal"}
          Close

%div.panel.panel-default#scenario{data: {id: 'makescenario'}}
  %div.panel-heading.nav.nav-pills
    %li
      %h4
        / =@scenario.name + ":"
    %li.dropdown#action-dropdown
      %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#", role: "button", "aria-expanded" => "false"}
        Actions
        %span.caret
      %ul.dropdown-menu{role: "menu"}
        %li

  %div.panel-body

    %div.css-treeview
      %ul
        %li
          %input{ type: 'checkbox', id: 'item-instructions', checked: 'checked'}
          %label{ for: 'item-instructions'}
            Resources
          %div.inline-block
            %div.dropdown
              %button.btn.btn-default.dropdown-toggle{type:'button', id:'dropdown-resources', "data-toggle" => 'dropdown', "aria-expanded" => "true"}
                / %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
                %span.caret
              %ul.dropdown-menu{role: 'menu', "aria-labelledby" => 'dropdown-resources-menu'}
                %li{role: 'presentation'}
                  = link_to 'add cloud'

= link_to 'Back', scenarios_path, class: 'btn btn-default'


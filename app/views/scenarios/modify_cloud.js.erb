
<% if @cloud.errors.any? %>
	<% if @cloud.errors[:cidr_block].any? %>
		$('#modal-modify-cloud').find('#cidr-div').addClass('has-error');
    		$('#modal-modify-cloud').find('#cidr-help').text('<%= @cloud.errors[:cidr_block][0] %>');
	<% end %>
<% else %>
	$('#cloud-name-<%= @cloud.id %>').text('<%= @cloud.name %>');
	$('#cloud-cidr-<%= @cloud.id %>').text('<%= @cloud.cidr_block %>');
	$('#modal-modify-cloud').modal('toggle');
<% end %>
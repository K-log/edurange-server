%li{ id: 'instance-li-' + instance.id.to_s}
  %label{ for: 'item-instance' + instance.id.to_s }
    %span{ id: 'instance-name-' + instance.id.to_s}
      = instance.name
    %div{ class: 'inline-block ' + instance.status, id: 'instance-status-dot-'+instance.id.to_s}
      &#9679;
    - if instance.booting?
      %div.spin.inline-block{ id: 'instance-spinner-' + instance.id.to_s}
    - else
      %div.inline-block{ id: 'instance-spinner-' + instance.id.to_s}

  %div.inline-block
    %div.dropdown{id:'dropdown-instance-'+instance.id.to_s}
      %button.btn.btn-default.dropdown-toggle{type:'button', id:'dropdown-button-instance-'+instance.id.to_s, "data-toggle" => 'dropdown', "aria-expanded" => "true"}
        / %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
        %span.caret
      %ul.dropdown-menu{role: 'menu', "aria-labelledby" => 'dropdown-button-instance-'+instance.id.to_s}
        %li{role: 'presentation'}
          
          - if instance.stopped?
            - boot_button_class = ""
            - unboot_button_class = "hidden"
          - elsif instance.booted? or instance.boot_failed?
            - boot_button_class = "hidden"
            - unboot_button_class = ""
          - elsif instance.booting?
            - boot_button_class = "hidden"
            - unboot_button_class = "hidden"

          = link_to 'Boot', boot_instance_scenario_path(instance_id: instance), method: :post, remote: true, id: "boot-button-instance-#{instance.id.to_s}", class: boot_button_class
          = link_to 'Unboot', unboot_instance_scenario_path(instance_id: instance), method: :post, remote: true, id: "unboot-button-instance-#{instance.id.to_s}", class: unboot_button_class

          = link_to 'Show Log', log_get_scenario_path(instance, kind: 'instance'), method: :post, remote: true
          = link_to "Show Bash History", instance_bash_history_scenario_path(instance_id: instance), method: :post, remote: true

          - if instance.scenario.custom?
            = link_to 'Modify', "#modal-modify-instance", :data => {:toggle=>"modal"}, onclick: "$('#modal-modify-instance').find('#instance_id').val('#{instance.id}'); $('#modal-modify-instance').find('#name-div').removeClass('has-error'); $('#modal-modify-instance').find('#name-help').html(''); $('#modal-modify-instance').find('#ip-div').removeClass('has-error'); $('#modal-modify-instance').find('#ip-help').html(''); $('#modal-modify-instance').find('#internet-accessible-div').removeClass('has-error'); $('#modal-modify-instance').find('#internet-accessible-help').html(''); $('#modal-modify-instance').find('#os-div').removeClass('has-error'); $('#modal-modify-instance').find('#os-help').html(''); $('#modal-modify-instance').find('#name').val($('#instance-name-#{instance.id}').html().trim()); $('#modal-modify-instance').find('#ip_address').val($('#instance-ip-address-#{instance.id}').html().trim()); $('#modal-modify-instance').find('#internet_accessible').val($('#instance-internet-accessible-#{instance.id}').html().trim()); $('#modal-modify-instance').find('#os').val($('#instance-os-#{instance.id}').html().trim());"
            = link_to 'Delete', instance_delete_scenario_path(instance_id: instance), method: :post, remote: true
          

  %ul{style: "padding-left: 20px;"}
    %li
      Status:
      %span{id: 'instance-status-' + instance.id.to_s}
        = instance.status
    %li
      Driver:
      %span{id: 'instance-driver-' + instance.id.to_s}
        = instance.driver_id == nil ? "not set" : instance.driver_id
    %li
      IP:
      %span{ id: "instance-ip-address-#{instance.id}" }
        = instance.ip_address
    %li
      Internet Accessible:
      %span{ id: "instance-internet-accessible-#{instance.id}" }
        = instance.internet_accessible ? "true" : "false"

    %div{ id: "accessible-options-#{instance.id}" }
      - if instance.internet_accessible
        %div{ id: "instance-public-ip-div-#{instance.id}"}
          %li
            Public IP:
            %span{id: 'instance-public-ip-' + instance.id.to_s}
              = instance.provider_instance_public_ip ? instance.provider_instance_public_ip : 'not set'
          %li
            SSH Ready:
            %span{id: 'instance-ssh-ready-' + instance.id.to_s}
              = instance.ssh_ready?
    %li
      Initialized:
      %span{id: 'instance-initialized-' + instance.id.to_s}
        = instance.initialized?
    %li
      OS:
      %span{ id: "instance-os-#{instance.id}" }
        = instance.os
    %li
      Roles:
      / # = instance.roles.map { |r| %Q('#{r.name}') }.join(',')
      = instance.roles.map { |r| %Q(#{r.name}) }.join(',')

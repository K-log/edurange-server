%li
  %label
    Scenario:
    %div{ class: 'inline-block ' + @scenario.status, id: 'scenario-status-dot' }
      &#9679;

    - if @scenario.booting?
      %div.spin.inline-block{ id: 'scenario-spinner' }
    - else
      %div.inline-block{ id: 'scenario-spinner' }

  %div.inline-block
    %div.dropdown
      %button.btn.btn-default.dropdown-toggle{type:'button', id:'dropdown-scenario-'+@scenario.id.to_s, "data-toggle" => 'dropdown', "aria-expanded" => "true"}
        / %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
        %span.caret
      %ul.dropdown-menu{role: 'menu', "aria-labelledby" => 'dropdown-scenario'+@scenario.id.to_s}
        %li{role: 'presentation'}
          = link_to 'Show log', log_get_scenario_path(@scenario, kind: 'scenario'), method: :post, remote: true
        - if @scenario.custom?
          %li{role: 'presentation'}
            = link_to 'Modify', "#modal-modify-scenario", :data => {:toggle=>"modal"}, onclick: "$('#modal-modify-scenario').find('#modal-scenario-name').html($('#scenario-name').html()); $('#modal-modify-scenario').find('#name').val(''); $('#modal-modify-scenario').find('#name-div').removeClass('has-error'); $('#modal-modify-scenario').find('#name-help').html(''); $('#modal-modify-scenario').find('#help-div').removeClass('has-error'); $('#modal-modify-scenario').find('#help-help').html('');"

  %ul{style: "padding-left: 20px;"}
    %li
      Scenario name:
      %span#scenario-name
        = @scenario.name
    %li
      Status:
      %span#scenario-status
        = @scenario.status
    %li
      Created at:
      = @scenario.created_at
    %p
    %li
      %label{ for: 'item-cloud-label-' + @scenario.id.to_s}
        Clouds:
      %div.inline-block
        - if @scenario.custom?
          %div.dropdown
            %button.btn.btn-default.dropdown-toggle{type:'button', id:'dropdown-clouds', "data-toggle" => 'dropdown', "aria-expanded" => "true"}
              %span.caret
            %ul.dropdown-menu{role: 'menu', "aria-labelledby" => 'dropdown-clouds'}
              %li{role: 'presentation'}
                = link_to 'Add Cloud', "#modal-add-cloud", :data => {:toggle=>"modal"}, onclick: "$('#modal-add-cloud').find('#name').val(''); $('#modal-add-cloud').find('#name-div').removeClass('has-error'); $('#modal-add-cloud').find('#name-help').html(''); $('#modal-add-cloud').find('#CIDR').val(''); $('#modal-add-cloud').find('#cidr-div').removeClass('has-error'); $('#modal-add-cloud').find('#cidr-help').html('');"
              
      %ul#clouds-ul{style: "padding-left: 20px;"}
        - @scenario.clouds.each do |cloud|
          = render '/scenarios/show/clouds', cloud: cloud

%h2 Student Home

%h3 Running Scenarios:

- @players.each do |player|
  %dl
    - scenario = Scenario.find(player.group.scenario_id)
    %h4= scenario.name
    %dl
      %b.inline login:
      = player.login
      %br
      %b.inline password:
      = player.password
      %br
      %b.iniline instructions:
      Get instructions from Instructor
      %br
      / %b.inline instances:
      / %dl
      /   - scenario.get_instances.each do |instance|
      /     = instance.name
      /     %b
      %b.inline Questions:
      = link_to 'here', "/scoring/student/#{scenario.id}"
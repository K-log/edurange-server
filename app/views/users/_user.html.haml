%td= user.name
%td= user.email
- if user.organization
  %td= user.organization
- else
  %td.text-muted None
%td= user.role.titleize
%td
  = link_to "View", user_path(user), class: 'btn btn-xs btn-default'
  = link_to "Edit", edit_user_path(user), class: 'btn btn-xs btn-warning'
  - if user != current_user
    = link_to "Delete", user_path(user), data: { :confirm => "Are you sure?" }, method: :delete, class: 'btn btn-xs btn-danger'

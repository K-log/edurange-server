bash "install_elf-inf" do
  # This code must create a answer file...
  code <<-EOF
  cd /tmp/
  tar zxvf elf-v1.0.1.tar.gz
  cd scoring-elf-v1.0.1/
  mv bad-ls ..
  cd /tmp/bad-ls
  make
  mkdir /tmp/dist
  cp /tmp/bad-ls/bad-ls /tmp/dist
  cd /tmp
  tar -cvf dist.tar dist
  mv /tmp/dist.tar /var/www
  touch /tmp/done
  chmod +x /tmp/done
  EOF

